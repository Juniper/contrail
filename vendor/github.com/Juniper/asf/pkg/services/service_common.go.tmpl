	}
	response, err := service.GetIntOwner(ctx, &GetIntOwnerRequest{Pool: pool, Value: int64(value)})
	if err != nil {
		return errutil.ToHTTPError(err)
	}

	return c.JSON(http.StatusOK, response)
}

