	switch id {
	{%- for schema in schemas %}{% if schema.Type == "response" %}
	case "{{ schema.ID }}":
		return &{{ schema.JSONSchema.GoName }}Response{}, nil
    {%- endif%}{% endfor %}
    default:
    	return nil, fmt.Errorf("response with id: %s does not exists", id)
	}
}
