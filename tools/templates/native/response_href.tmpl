package services

import (
	"net/url"

	"github.com/pkg/errors"
)

{% for schema in schemas %}{% if schema.Type != "abstract" and schema.ID %}
{% set name = schema.JSONSchema.GoName %}

{% macro applyHref(objPrefix, obj, type, name) %} collectionURL, err := url.Parse("http://"+host+"{{ schema.Prefix }}{{ schema.Path }}/")
	if err != nil {
		return errors.Wrap(err, "failed to apply href to {{ type }}{{ name }}Response")
	}
	uuidURL, err := url.Parse({{ objPrefix }}{{ obj }}.UUID)
	if err != nil {
		return errors.Wrap(err, "failed to apply href to {{ type }}{{ name }}Response")
	}
    {{ objPrefix }}{{ obj }}.Href = collectionURL.ResolveReference(uuidURL).String(){% endmacro %}

func (r* Create{{ name }}Response) ApplyHref(host string) error {
	{{ applyHref("r.", name, "Create", name) }}
	return nil
}

func (r* Update{{ name }}Response) ApplyHref(host string) error {
	{{ applyHref("r.", name, "Update", name) }}
	return nil
}

func (r* Get{{ name }}Response) ApplyHref(host string) error {
	{{ applyHref("r.", name, "Get", name) }}
	return nil
}

func (r *List{{name}}Response) ApplyHref(host string) error {
	for _, obj := range r.{{ name }}s {
		{{ applyHref("", "obj", "List", name) }}
	}
	return nil
}

{% endif %}{% endfor %}