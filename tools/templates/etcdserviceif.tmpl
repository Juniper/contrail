type SerializedObject struct {
	data []byte
	obj proto.Message
}

func NewSerializedObject(d []byte, o proto.Message) *SerializedObject {
	return &SerializedObject{
		data: d,
		obj: o,
	}
}

func (s *SerializedObject) Map(c models.Codec, f func()) error {
	err := c.Decode(s.data, s.obj)
	if err != nil {
		return err
	}
	f()
	s.data, err = c.Encode(s.obj)
	return err
}

func (ns *NotifierService) handleRefWrapper(
	ctx context.Context, key string, obj proto.Message, handleRef func(),
) error {
	txn := GetTxn(ctx)
	oldData:= txn.Get(key)

	sObj := NewSerializedObject(oldData, obj)
	if err := sObj.Map(ns.Codec, handleRef); err != nil {
		return err
	}

	txn.Put(key, sObj.data)
	return nil
}

