    key := models.ResourceKey("{{ schema.ID }}", o.UUID)

	ns.log.WithField("uuid", o.UUID).Debug("Updating {{ schema.JSONSchema.GoName }} in etcd")
	return response, ns.Client.InTransaction(ctx, func(ctx context.Context) error {
		txn := GetTxn(ctx)
