{% if input.AuthURL %}
id: {{ input.ID }}
password: {{ input.Password }}
{%if input.DomainID %}domain_id: {{ input.DomainID }}{%endif%}
{%if input.DomainName %}domain_Name: {{ input.DomainName }}{%endif%}
{%if input.ProjectID %}project_id: {{ input.ProjectID }}{%endif%}
