    data:
      kubernetes-master-node: *kubernetes_master_nodes
    expect:
      kubernetes-master-node:
        uuid: kubernetes_master_nodes_uuid
        parent_type: kubernetes-cluster
        parent_uuid: test_kubernetes_cluster_uuid
        node_refs:
