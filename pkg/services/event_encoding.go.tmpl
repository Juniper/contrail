		case "{{ schema.TypeName }}-{{ reference.LinkTo.TypeName }}":
			switch (operation) {
				case RefOperationAdd:
					request := &Event_Create{{ refType }}Request{
						Create{{ refType }}Request: &Create{{ refType }}Request{
								ID: option.FromUUID,
								{{ refType }}: &models.{{ refType }}{
									UUID: option.ToUUID,
								},
